@model DSS_Clothes.Models.Designer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Designer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DesignerID" />
            <div class="form-group">
                <label asp-for="Clothes" class="control-label"></label>
                <select asp-for="ClotheID" class="form-control" asp-items="ViewBag.ClotheID"></select>
                <span asp-validation-for="ClotheID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stores" class="control-label"></label>
                <select asp-for="StoreID" class="form-control" asp-items="ViewBag.StoreID"></select>
                <span asp-validation-for="StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
