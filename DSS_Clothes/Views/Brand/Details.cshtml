@model DSS_Clothes.Models.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandYear)
        </dd>
        <dd class = "col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Clothes
                        </th>
                        
                </thead>
                <tbody>
                    @foreach (var item in Model.Clothes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClotheName)
                            </td>
                            <td>
                                <a asp-controller="Clothe" asp-action="Delete" asp-route-id="@item.ClotheID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BrandID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
